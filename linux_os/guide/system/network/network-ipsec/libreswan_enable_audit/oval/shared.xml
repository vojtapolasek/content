<def-group>
  <definition class="compliance" id="libreswan_enable_audit" version="1">
    {{{ oval_metadata("All world writable directories should be owned by root.") }}}
    <criteria comment="check for local directories that are world writable and have uid greater than 0">
      <criterion comment="check for local directories that are world writable and have uid greater than 0" test_ref="test_libreswan_enable_audit" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test id="test_libreswan_enable_audit" check="all" check_existence="all_exist"
  comment="blabla" version="1">
    <ind:object object_ref="object_libreswan_enable_audit" />
    <ind:state state_ref="state_libreswan_enable_audit" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_libreswan_enable_audit" version="1">
    <ind:behaviors singleline="true" multiline="false" />
    <ind:filepath>/etc/ipsec.conf</ind:filepath>
    <ind:pattern operation="pattern match">^(?:.*\n)*config setup\n(.*)\n.*$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_libreswan_enable_audit" version="1">
    <ind:behaviors multiline="true" />
    <ind:subexpression operation="pattern match">^\s+audit-log=yes\s*$</ind:subexpression>
  </ind:textfilecontent54_state>

</def-group>
